@{
    ViewData["Title"] = "Thống kê";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2 bg-dark text-white p-4" style="min-height: 100vh;">
            <h5 class="mb-4">Admin Panel</h5>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Article")">
                        <i class="bi bi-file-text"></i> Articles
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="@Url.Action("PendingApproval", "Article")">
                        <i class="bi bi-clock"></i> Pending Articles
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="@Url.Action("Index", "Statistics")">
                        <i class="bi bi-graph-up"></i> Statistics
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="@Url.Action("LogoutGet", "Account")">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <div class="col-md-10 p-4">
            <h2 class="mb-4">Thống kê</h2>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form id="dateRangeForm" class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">Từ ngày</label>
                                    <input type="date" id="fromDate" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Đến ngày</label>
                                    <input type="date" id="toDate" class="form-control" />
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary">Áp dụng</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h5 class="card-title">Tổng số bài viết</h5>
                            <div id="totalArticles" class="display-4">0</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h5 class="card-title">Bài viết đã duyệt</h5>
                            <div id="approvedArticles" class="display-4">0</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <h5 class="card-title">Bài viết chờ duyệt</h5>
                            <div id="pendingArticles" class="display-4">0</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card bg-danger text-white">
                        <div class="card-body">
                            <h5 class="card-title">Bài viết từ chối</h5>
                            <div id="rejectedArticles" class="display-4">0</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Thống kê theo chủ đề</h5>
                            <div class="table-responsive">
                                <table class="table" id="categoryStats">
                                    <thead>
                                        <tr>
                                            <th>Chủ đề</th>
                                            <th>Số lượng</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Thống kê theo tác giả</h5>
                            <div class="table-responsive">
                                <table class="table" id="authorStats">
                                    <thead>
                                        <tr>
                                            <th>Tác giả</th>
                                            <th>Số lượng</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateStats() {
            const fromDate = document.getElementById('fromDate').value;
            const toDate = document.getElementById('toDate').value;

            // Update status statistics
            fetch('/Statistics/GetArticlesByStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ fromDate, toDate })
            })
            .then(response => response.json())
            .then(data => {
                const total = data.reduce((sum, item) => sum + item.articleCount, 0);
                const approved = data.find(item => item.status === "Đã duyệt")?.articleCount || 0;
                const pending = data.find(item => item.status === "Chờ duyệt")?.articleCount || 0;
                const rejected = data.find(item => item.status === "Từ chối")?.articleCount || 0;

                document.getElementById('totalArticles').textContent = total;
                document.getElementById('approvedArticles').textContent = approved;
                document.getElementById('pendingArticles').textContent = pending;
                document.getElementById('rejectedArticles').textContent = rejected;
            });

            // Update category statistics
            fetch('/Statistics/GetArticlesByCategory', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ fromDate, toDate })
            })
            .then(response => response.json())
            .then(data => {
                const tbody = document.querySelector('#categoryStats tbody');
                tbody.innerHTML = data.map(item => `
                    <tr>
                        <td>${item.categoryName}</td>
                        <td>${item.articleCount}</td>
                    </tr>
                `).join('');
            });

            // Update author statistics
            fetch('/Statistics/GetArticlesByAuthor', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ fromDate, toDate })
            })
            .then(response => response.json())
            .then(data => {
                const tbody = document.querySelector('#authorStats tbody');
                tbody.innerHTML = data.map(item => `
                    <tr>
                        <td>${item.authorName}</td>
                        <td>${item.articleCount}</td>
                    </tr>
                `).join('');
            });
        }

        document.getElementById('dateRangeForm').addEventListener('submit', function(e) {
            e.preventDefault();
            updateStats();
        });

        // Initial load
        updateStats();
    </script>
} 