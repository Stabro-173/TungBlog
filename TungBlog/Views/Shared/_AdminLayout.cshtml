@{
    var username = Context.Session.GetString("Username") ?? "Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .sidebar {
            width: 250px;
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: #1a1f2c;
            z-index: 1000;
        }
        .main-content {
            margin-left: 250px;
            background-color: white;
            min-height: 100vh;
        }
        .nav-link {
            color: white !important;
            padding: 0.8rem 1rem;
            text-decoration: none;
            font-weight: 500;
        }
        .sidebar-brand {
            padding: 1.5rem 1rem;
            font-size: 1.25rem;
            font-weight: bold;
            color: white !important;
            text-decoration: none;
            display: block;
            border-bottom: 1px solid rgba(255,255,255,.1);
        }
        .nav-item {
            margin: 5px 0;
        }
        .nav-item i {
            width: 20px;
        }
        * {
            transition: none !important;
        }
        .stat-card {
            padding: 20px;
            border-radius: 10px;
            color: white;
            margin-bottom: 20px;
        }
        .stat-card.pending {
            background-color: #ffc107;
        }
        .stat-card.approved {
            background-color: #28a745;
        }
        .stat-card.rejected {
            background-color: #dc3545;
        }
        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            margin: 10px 0;
        }
        .stat-title {
            font-size: 1.1rem;
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-brand">TungBlog Admin</div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Articles", "Admin")">
                    <i class="bi bi-files me-2"></i>All Articles
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("PendingArticles", "Admin")">
                    <i class="bi bi-clock-history me-2"></i>Pending Articles
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Statistics", "Admin")">
                    <i class="bi bi-graph-up me-2"></i>Statistics
                </a>
            </li>
            <li class="nav-item mt-3">
                <a class="nav-link" href="@Url.Action("LogoutGet", "Account")">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        <div class="p-4">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
