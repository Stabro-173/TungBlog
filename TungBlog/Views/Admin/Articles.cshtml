@model IEnumerable<TungBlog.Models.Article>

<div class="container-fluid">
    <h2 class="mb-4">All Articles</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Submit Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model)
                {
                    <tr>
                        <td>@article.Title</td>
                        <td>@article.Author.FullName</td>
                        <td>@article.Category</td>
                        <td>@article.SubmitDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            @switch (article.Status)
                            {
                                case 0:
                                    <span class="badge bg-warning">Pending</span>
                                    break;
                                case 1:
                                    <span class="badge bg-success">Approved</span>
                                    break;
                                case 2:
                                    <span class="badge bg-danger">Rejected</span>
                                    break;
                            }
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="@Url.Action("Details", "Article", new { id = article.Id })" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Article", new { id = article.Id })" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-controller="Article" asp-action="Delete" asp-route-id="@article.Id" method="post" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this article?')">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function deleteArticle(id) {
            if (confirm('Are you sure you want to delete this article?')) {
                fetch(`/Article/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    }
                });
            }
        }
    </script>
} 