@model TungBlog.Models.Article
@{
    ViewData["Title"] = "Thêm bài viết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as List<TungBlog.Models.Category>;
}

<h2 class="mb-4">Thêm bài viết mới</h2>

<form asp-action="Add" method="post">
    <div class="mb-3">
        <label>Tiêu đề</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Tóm tắt</label>
        <textarea asp-for="Summary" class="form-control" rows="2" required></textarea>
    </div>

    <div class="mb-3">
        <label>Nội dung</label>
        <textarea asp-for="Content" class="form-control" rows="5" required></textarea>
    </div>

    <div class="mb-3">
        <label>Chủ đề</label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var c in categories)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Thêm bài viết</button>
</form>
