@model TungBlog.Models.Article
@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
}

<h2 class="mb-4">Chỉnh sửa bài viết</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Tiêu đề</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Tóm tắt</label>
        <textarea asp-for="Summary" class="form-control" rows="2" required></textarea>
    </div>

    <div class="mb-3">
        <label>Nội dung</label>
        <textarea asp-for="Content" class="form-control" rows="5" required></textarea>
    </div>

    <div class="mb-3">
        <label>Chủ đề</label>
        <input asp-for="Category" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
</form>
